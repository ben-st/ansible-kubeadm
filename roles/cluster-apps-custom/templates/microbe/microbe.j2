apiVersion: v1
kind: Namespace
metadata:
   name: microbe
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: microbe
  namespace: microbe
spec:
  replicas: 2
  selector:
    matchLabels:
      app: microbe
  template:
    metadata:
      labels:
        app: microbe
    spec:
      containers:
      - name: microbe
        image: benst/microbe:1.0
---
apiVersion: v1
kind: Service
metadata:
  name: microbe
  namespace: microbe
spec:
  ports:
  - name: http
    targetPort: 8080
    port: 80
  selector:
    app: microbe
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: microbe
  namespace: microbe
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: microbe.{{ domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: microbe
          servicePort: http
